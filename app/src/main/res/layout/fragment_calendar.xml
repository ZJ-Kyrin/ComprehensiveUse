<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/tv_white"
    android:paddingTop="100dp">


    <com.tyczj.extendedcalendarview.ExtendedCalendarView
        android:id="@+id/extended_calendar_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/extended_calendar_view"
        android:layout_gravity="left"
        android:background="@color/tv_white"
        android:clickable="true"
        android:gravity="center"
        android:text="@string/cancel_date"
        android:textColor="@color/text_black"
        android:textSize="@dimen/text_size_12" />

    <Button
        android:id="@+id/sure"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/extended_calendar_view"
        android:background="@color/tv_white"
        android:clickable="true"
        android:gravity="center"
        android:text="@string/sure_date"
        android:textColor="@color/text_black"
        android:textSize="@dimen/text_size_12" />

</RelativeLayout>