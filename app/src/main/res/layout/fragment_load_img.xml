<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_load_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:text="This is LoadImgFragment."
        android:textSize="@dimen/text_size_18" />

    <EditText
        android:id="@+id/id_load_edt"
        android:layout_marginTop="72dp"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/distance_32"
        android:background="@drawable/edittext_backgroud"/>

    <com.ui.csl.comprehensiveuse.MyViews.EditTextWithClearButton
        android:layout_below="@+id/id_load_edt"
        android:layout_marginTop="@dimen/distance_56"
        android:id="@+id/edit_clear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical" />

</RelativeLayout>