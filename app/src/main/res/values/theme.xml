<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="BaseTheme.Light" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="theme_background">@color/theme_background_color</item>

        <!-- Actionbar color -->
        <item name="colorPrimary">?attr/theme_color</item>
        <!-- Status bar color-->
        <item name="colorPrimaryDark">?attr/theme_color</item>
        <item name="colorAccent">?attr/theme_color</item>

    </style>


    <style name="BaseAppTheme" parent="BaseTheme.Light">
    </style>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="BaseAppTheme">
        <!-- Customize your theme here. -->
        <item name="theme_color">@color/theme_color</item>
    </style>

</resources>